//baekjoon_1562
//계단 수

#include <stdio.h>

#define MOD (1000000000)

int N;
//D[i][j][S] = 길이가 i, 마지막 수 j, 상태 S
int D[101][10][1 << 10];

int main(void)
{
	int i, j, k, ans;

	scanf("%d", &N);
	
	for (i = 1; i <= 9;i++) D[1][i][1 << i] = 1;

	for (i = 1; i <= N - 1;i++)
	{
		for (j = 0; j <= 9;j++)
		{
			for (k = 0; k < (1 << 10);k++)
			{
				if (!D[i][j][k]) continue;
				if (!(k & (1 << j))) continue;

				if (j + 1 <= 9)
				{
					D[i + 1][j + 1][k | (1 << (j + 1))] += D[i][j][k];
					D[i + 1][j + 1][k | (1 << (j + 1))] %= MOD;
				}

				if (j - 1 >= 0)
				{
					D[i + 1][j - 1][k | (1 << (j - 1))] += D[i][j][k];
					D[i + 1][j - 1][k | (1 << (j - 1))] %= MOD;
				}

			}
		}
	}

	ans = 0;
	for (i = 0; i <= 9;i++)
	{
		ans += D[N][i][(1 << 10) - 1];
		ans %= MOD;
	}

	printf("%d\n", ans);

	return 0;
}

