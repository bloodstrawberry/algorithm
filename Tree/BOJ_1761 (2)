//baekjoon_1761
//정점들의 거리 => U + V - 2 * LCA(U,V)
#pragma warning(disable : 4996)
#include <stdio.h>
int N, M;

typedef struct st
{
	int value;
	int dist;
	struct st* next;
}NODE;

NODE HEAD[50010];
NODE POOL[50010 * 2];
int cnt;

void Make(int p, int c, int d)
{
	NODE *nd = &POOL[cnt++];
	nd->value = c;
	nd->dist = d;

	if (HEAD[p].next == 0) HEAD[p].next = nd;
	else
	{
		nd->next = HEAD[p].next;
		HEAD[p].next = nd;
	}
}

void input()
{
	int i, k;
	int p, c, d;

	scanf("%d", &N);

	for (i = 0; i < N - 1;i++)
	{
		scanf("%d %d %d", &p, &c, &d);		
		Make(p, c, d);
		Make(c, p, d);
	}

}

int Que[50010];
int parent[50010];
int VISIT[50010];
int Depth[50010];
int Dist[50010];
int RP, WP;

void BFS()
{
	int out;
	NODE *p;

	Que[WP++] = 1;
	VISIT[1] = 1;
	Depth[1] = 1;

	while (WP > RP)
	{
		out = Que[RP++];

		for (p = HEAD[out].next; p; p = p->next)
		{
			int tmp = p->value;

			if (!VISIT[tmp])
			{
				Que[WP++] = tmp;
				VISIT[tmp] = 1;
				parent[tmp] = out;
				Depth[tmp] = Depth[out] + 1;
				Dist[tmp] = Dist[out] + p->dist;
			}
		}
	}
}

int LCA(int a, int b)
{
	int tmp;

	//높은 depth가 a가 되게 변경.
	if (Depth[a] < Depth[b])
	{
		tmp = a;
		a = b;
		b = tmp;
	}
	
	while (Depth[a] != Depth[b]) a = parent[a];
	while (a != b) a = parent[a], b = parent[b];

	return a;
}

void output(int num)
{
	NODE *p = HEAD[num].next;

	while (p)
	{
		printf("%d\n", p->value);
		p = p->next;
	}
}

int main()
{
	int i, a, b;
	
	input();
	BFS();

	scanf("%d", &M);

	for (i = 0; i < M;i++)
	{
		scanf("%d %d", &a, &b);
		printf("%d\n", Dist[a] + Dist[b] - 2 * Dist[LCA(a, b)]);
	}

	return 0;
}
